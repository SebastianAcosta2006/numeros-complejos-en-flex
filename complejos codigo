%{
#include <stdio.h>
%}
digit        [0-9]
entero       {digit}+
decimal      ({digit}+\.{digit}*|\.{digit}+)
exp          [eE][+-]?{digit}+
real         [+-]?({entero}|{decimal})({exp})?
imag         {real}?[iIjJ]
%%
^{real}[+-]{real}[iIjJ]$   { printf("acepta (complejo)\n"); }
^{real}$                   { printf("acepta (real)\n"); }
^{imag}$                   { printf("acepta (imaginario)\n"); }
.*                         { printf("no acepta\n"); }
%%
int yywrap() {
    return 1;
}
